                WS-TEXTO

     STRING
     'LUCAS'
     ' '
     'CARDOSO'
     DELIMITED BY SIZE INTO WS-CONTEUDO
     END-STRING

    DISPLAY WS-CONTEUDO

*>************FORMA2*****************************
